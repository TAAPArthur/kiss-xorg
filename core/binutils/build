#!/bin/sh -e

./configure \
    --prefix=/usr \
    --build=x86_64-pc-linux-musl \
    --host=x86_64-pc-linux-musl \
    --enable-targets=x86_64-pep \
    --disable-multilib \
    --disable-werror \
    --with-mmap \
    --with-system-zlib

make MAKEINFO=:

make MAKEINFO=: \
     DESTDIR="$1" \
     install
