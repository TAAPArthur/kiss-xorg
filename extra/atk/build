#!/bin/sh -e

export DESTDIR="$1"

# Don't build tests.
sed "/subdir('tests')/d" meson.build > _
mv -f _ meson.build

meson \
    --prefix=/usr \
    --sysconfdir=/etc \
    --mandir=/usr/share/man \
    -Ddocs=false \
    -Dintrospection=false \
    . output

ninja -C output
ninja -C output install
