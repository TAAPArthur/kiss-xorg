#!/bin/sh -e

for p in *.patch; do
    patch -p1 < "$p"
done

# Disable download of missing (optional) dependencies
# during the build. This cannot be turned off otherwise.
rm -rf subprojects

: > tests/meson.build
: > examples/meson.build
: > docs/meson.build

meson \
    --prefix=/usr \
    -Dgtk_doc=false \
    -Dintrospection=disabled \
    . build

ninja -C build
ninja -C build install
